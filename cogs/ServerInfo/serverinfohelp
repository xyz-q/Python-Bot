import discord
from discord.ext import commands
from discord import app_commands, Interaction

class dmhelp(commands.Cog):
    def __init__(self, bot):
        self.bot = bot
    
    def get_serverinfo_commands(self):
        """Get all commands from ServerInfo cogs"""
        commands_list = ["**Available ServerInfo Commands:**"]
        
        # Get all cogs that are in the ServerInfo folder
        serverinfo_cogs = ['ServerInfo', 'ServerInvite', 'ServerMembers', 'MessageReader', 'ServerVoiceJoin', 'RoleViewer']
        
        for cog_name in serverinfo_cogs:
            cog = self.bot.get_cog(cog_name)
            if cog:
                for command in cog.get_commands():
                    signature = command.signature if hasattr(command, 'signature') else ''
                    help_text = command.help or 'No description'
                    commands_list.append(f",{command.name} {signature} - {help_text}")
        
        return commands_list

    @commands.hybrid_command(name="dmhelp", description="Show all ServerInfo commands")
    async def dmhelp(self, interaction: discord.Interaction):
        commands_list = self.get_serverinfo_commands()
        await interaction.response.send_message('\n'.join(commands_list), ephemeral=True, delete_after=15)



async def setup(bot):
    await bot.add_cog(dmhelp(bot))